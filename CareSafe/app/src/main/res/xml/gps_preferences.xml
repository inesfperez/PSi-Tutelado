<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title2Preferencies">
        <EditTextPreference
            app:key="@string/keyPreferenciesAlias"
            app:title="@string/textSettingAlias"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="@string/keyPreferenciesToEmail"
            app:title="@string/textSettingToEmail"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/title1Preferencies">
        <EditTextPreference
            app:key="@string/keyPreferenciesCountry"
            app:title="@string/textSettingGPSCountry"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="@string/keyPreferenciesState"
            app:title="@string/textSettingGPSState"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="@string/keyPreferenciesCity"
            app:title="@string/textSettingGPSCity"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="@string/keyPreferenciesRoad"
            app:title="@string/textSettingGPSRoad"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:defaultValue="25"
            app:entries="@array/radiusSettingEntries"
            app:entryValues="@array/radiusSettingValues"
            app:title="@string/textSettingGPSRadius"
            app:key="@string/keyPreferenciesRadius"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="@string/keyPreferenciesTime"
            app:title="@string/textSettingGPSTime"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>