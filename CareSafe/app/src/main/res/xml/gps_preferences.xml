<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/titlePreferencies">

        <EditTextPreference
            app:key="@string/keyPreferenciesLocation"
            app:title="@string/textSettingGPSLocation"
            app:useSimpleSummaryProvider="true"/>

        <ListPreference
            app:defaultValue="25"
            app:entries="@array/radiusSettingEntries"
            app:entryValues="@array/radiusSettingValues"
            app:title="@string/textSettingGPSRadius"
            app:key="@string/keyPreferenciesRadius"
            app:useSimpleSummaryProvider="true"/>

        <EditTextPreference
            app:key="@string/keyPreferenciesTime"
            app:title="@string/textSettingGPSTime"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>
</PreferenceScreen>